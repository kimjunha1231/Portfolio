---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="nav-brand">
			<h2><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<div class="nav-links">
			<HeaderLink href="/">홈</HeaderLink>
			<HeaderLink href="/blog">블로그</HeaderLink>
			<HeaderLink href="/project">프로젝트</HeaderLink>
			<HeaderLink href="/resume">이력서</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/junha" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
				<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24">
					<path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path>
				</svg>
			</a>
			<a href="mailto:junha@example.com" aria-label="이메일">
				<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24">
					<path
						fill="currentColor"
						d="M2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H2zM1 4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v.217l-7 4.2-7-4.2V4zm13 2.383-4.758 2.855L15 11.114v-4.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-4.694 4.441A1 1 0 0 0 2 14h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z"
					></path>
				</svg>
			</a>
		</div>
		
		<!-- 모바일 메뉴 토글 -->
		<button class="mobile-menu-toggle" aria-label="메뉴 열기/닫기">
			<span></span>
			<span></span>
			<span></span>
		</button>
	</nav>
</header>

<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		background: rgba(15, 23, 42, 0.95);
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--color-border);
		transition: background var(--transition-fast);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1rem 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.nav-brand h2 {
		margin: 0;
		font-size: 1.5rem;
		font-weight: 700;
	}

	.nav-brand a {
		text-decoration: none;
		color: var(--color-text);
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		transition: opacity var(--transition-fast);
	}

	.nav-brand a:hover {
		opacity: 0.8;
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	.social-links {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		color: var(--color-text-light);
		border-radius: 50%;
		transition: all var(--transition-fast);
	}

	.social-links a:hover {
		color: var(--color-primary);
		background: var(--color-background-alt);
		transform: translateY(-2px);
	}

	.mobile-menu-toggle {
		display: none;
		flex-direction: column;
		gap: 4px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 8px;
		border-radius: 4px;
		transition: background var(--transition-fast);
	}

	.mobile-menu-toggle:hover {
		background: var(--color-background-alt);
	}

	.mobile-menu-toggle span {
		width: 24px;
		height: 3px;
		background: var(--color-text);
		border-radius: 2px;
		transition: all var(--transition-fast);
	}

	/* 스크롤 시 헤더 스타일 변경 */
	.scrolled {
		background: rgba(15, 23, 42, 0.98);
		box-shadow: var(--shadow-md);
	}

	/* 반응형 디자인 */
	@media (max-width: 768px) {
		nav {
			padding: 1rem;
		}
		
		.nav-links {
			display: none;
		}
		
		.social-links {
			display: none;
		}
		
		.mobile-menu-toggle {
			display: flex;
		}
	}

	/* 페이지 상단 여백 (고정 헤더 때문에) */
	:global(body) {
		padding-top: 80px;
	}
</style>

<script>
	// 스크롤 시 헤더 스타일 변경
	window.addEventListener('scroll', () => {
		const header = document.querySelector('header');
		if (window.scrollY > 100) {
			header?.classList.add('scrolled');
		} else {
			header?.classList.remove('scrolled');
		}
	});
</script>
