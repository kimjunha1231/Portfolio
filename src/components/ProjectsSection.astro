---
import { getCollection } from "astro:content";

// projects 컬렉션에서 모든 프로젝트 가져오기
const projects = await getCollection("projects");
// order 순으로 정렬
const sortedProjects = projects.sort((a, b) => a.data.order - b.data.order);
---

<section class="section section-alt" id="projects">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">프로젝트</h2>
    </div>

    <div class="card-grid">
      {
        sortedProjects.map((project) => (
          <div
            class="card project-card fade-in"
            data-project-id={project.data.order}
          >
            <h3>{project.data.title}</h3>
            <p class="project-period">{project.data.period}</p>
            <div class="project-summary">
              <div class="project-section">
                <strong>
                  {project.data.features ? "주요 기능:" : "주요 성과:"}
                </strong>
                <span>
                  {project.data.features || project.data.achievements}
                </span>
              </div>
            </div>
            <div class="tech-tags">
              {project.data.technologies.map((tech) => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>

            <div
              class="project-links"
              style="margin-top: 1rem; display: flex; gap: 0.5rem; z-index: 10;"
            >
              {project.data.demo && (
                <a
                  href={project.data.demo}
                  target="_blank"
                  class="project-link-btn demo-link"
                  onclick="event.stopPropagation()"
                >
                  Demo
                </a>
              )}
              {project.data.github && (
                <a
                  href={project.data.github}
                  target="_blank"
                  class="project-link-btn github-link"
                  onclick="event.stopPropagation()"
                >
                  GitHub
                </a>
              )}
            </div>
          </div>
        ))
      }
    </div>

    <!-- <div class="text-center" style="margin-top: 3rem;">
			<a href="/project" class="btn btn-primary">더 많은 프로젝트 보기</a>
		</div> -->
  </div>
</section>

<style>
  .project-card {
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(96, 165, 250, 0.2);
    border-color: var(--primary);
  }

  .project-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(96, 165, 250, 0.1) 0%,
      rgba(59, 130, 246, 0.1) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: inherit;
  }

  .project-card:hover::before {
    opacity: 1;
  }

  .project-period {
    color: var(--text-light);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .project-summary {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    margin-bottom: 1rem;
  }

  .project-section {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .project-section strong {
    color: var(--primary);
    font-size: 0.9rem;
  }

  .project-section span {
    font-size: 0.85rem;
    line-height: 1.4;
    color: var(--text-light);
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
  }

  .tech-tag {
    background: rgba(96, 165, 250, 0.1);
    color: var(--primary);
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    border: 1px solid rgba(96, 165, 250, 0.2);
    transition: all 0.3s ease;
  }

  .project-card:hover .tech-tag {
    background: rgba(96, 165, 250, 0.2);
    border-color: rgba(96, 165, 250, 0.3);
  }

  .project-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .project-link {
    color: var(--primary);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .project-link:hover {
    color: var(--primary-dark);
  }

  .project-link-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.4rem 0.8rem;
    border-radius: 0.5rem;
    font-size: 0.8rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .demo-link {
    background: rgba(59, 130, 246, 0.1);
    color: #60a5fa;
    border-color: rgba(59, 130, 246, 0.3);
  }

  .demo-link:hover {
    background: rgba(59, 130, 246, 0.2);
    transform: translateY(-2px);
  }

  .github-link {
    background: rgba(255, 255, 255, 0.05);
    color: #e2e8f0;
  }

  .github-link:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }
</style>
